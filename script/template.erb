---
layout: <%= post.format == 'aside' ? 'note' : post.format %>
date: <%= DateTime.parse(post.date).strftime('%F %T %z') %>
type: <%= post.type %>
<% unless post.tags.empty? -%>
tags:
<%    post.tags.each do |tag| -%>
<%      unless %w[run tech].include?(tag) -%>
- <%= tag %>
<%      end -%>
<%    end -%>
<% end -%>
<% unless post.title.rendered.empty? -%>
title: <%= post.title.rendered %>
<% end -%>
---

<%= content %>